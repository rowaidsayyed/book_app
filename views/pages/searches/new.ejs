<!DOCTYPE html>
<html lang="en">
  <%- include('../../layout/head.ejs') %>
<head><title>Form</title></head>

<body>
  <%- include('../../layout/header.ejs') %>
  <main>
    <form action="/searches/shows" method="POST">
      <!-- <label for="h">Enter a title ot Author</label> -->
      <input class='titleOrAuthor' type="text" id='h' name='search' placeholder="Enter a title ot Author" required>
      <div class='full'>
        <label for="title">Title</label>
        <input type="radio" id='title' name='searchType' value="intitle" required>
      </div>
      <div class='full'>
        <label for="autor">Author</label>
        <input type="radio" id='autor' name='searchType' value="inauthor">
      </div>
      <button>Search the Google Books API</button>
    </form>
  </main>
  <%- include('../../layout/footer.ejs') %>

<script src="https://code.jquery.com/jquery-3.4.1.js"></script>
<script src="../../../app.js"></script>
</body>

</html>